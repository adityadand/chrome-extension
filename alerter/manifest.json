{
    "name": "alerter",
    "version": "1.0",
    "description": "simple alerts makr",
    "manifest_version": 2  ,
     "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],  
    "browser_action": 
   { 
  	"default_popup": "popup.html"
   },

   "permissions": [
   	"tabs",
   	"storage"
   ]

}