{
    "name": "ttv",
    "version": "1.0",
    "description": "simple text to speech",
    "manifest_version": 2, 

     "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ],
    
    "browser_action": 
   { 
   	"default_icon": "ttv.png",
  	"default_popup": "popup.html"
   },

   "permissions":[
   	"tabs"
   ] 
}